# === Application ===
APP_NAME="QuteCart"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://qutekart.local
APP_PORT=80
APP_VERSION=1.0
APP_TIMEZONE='UTC'

# === Logging ===
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# === Database (PostgreSQL) ===
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=qutekart
DB_USERNAME=qutekart
DB_PASSWORD=secret

# === Drivers ===
BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=7200

# === Cache ===
MEMCACHED_HOST=127.0.0.1

# === Redis ===
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# === Mail ===
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@qutekart.com"
MAIL_FROM_NAME="${APP_NAME}"

# === Storage (S3/MinIO) ===
# For local development: use MinIO (S3-compatible)
# For production: use DigitalOcean Spaces or AWS S3
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=qutekart
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_URL=http://localhost:9000/qutekart

# === MinIO Console ===
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# === Mailpit (Email Testing - Dev Only) ===
MAILPIT_SMTP_PORT=1025
MAILPIT_UI_PORT=8025

# === Pusher (Real-time) ===
PUSHER_APP_ID=1776074
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# === Vite (Frontend Build) ===
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# === OpenAI ===
OPENAI_API_KEY=
OPENAI_ORGANIZATION=

# === Tenancy (Multi-Tenant Subdomains) ===
CENTRAL_DOMAINS=qutekart.local,qutecat.local,localhost,127.0.0.1

# === SaaS Subscriptions ===
# Stripe API Keys
STRIPE_KEY=pk_test_
STRIPE_SECRET=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Subscription Plans (Stripe Product IDs - set after creating in Stripe Dashboard)
STRIPE_PRODUCT_STARTER=
STRIPE_PRODUCT_GROWTH=
STRIPE_PRODUCT_ENTERPRISE=

# Free tier limits
FREE_TIER_PRODUCTS_LIMIT=25
FREE_TIER_ORDERS_LIMIT=100
FREE_TIER_STORAGE_LIMIT_MB=500

# === Firebase (Push Notifications) ===
FIREBASE_CREDENTIALS=

# === Payment Gateways ===
# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# Razorpay
RAZORPAY_KEY=
RAZORPAY_SECRET=

# Paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=

# === SMS Providers ===
# Twilio
TWILIO_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Vonage (Nexmo)
VONAGE_API_KEY=
VONAGE_API_SECRET=
VONAGE_SMS_FROM=
